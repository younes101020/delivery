{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["../../node_modules/@types"],
    "types": ["node"],
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["./src/**/*.ts", "./package.json", "./__tests__/**/*.ts"],
  "exclude": ["./dist", "./node_modules"]
}
